rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /AllCourses/{courseId} {
      allow read: if true;
      allow write: if false;
    }
    match /AllStreams/{streamId} {
      allow read: if true;
      allow write: if false;
    }
    match /CoursesByStream/{streamId} {
      allow read: if true;
      allow write: if false;
    }
    match /CourseDetails/{courseId} {
      allow read: if true;
      allow write: if false;
    }
    match /CourseDetails/{courseId}/Content {
      allow read: if true;
      allow write: if false;
    }
    match /CourseDetails/{courseId}/Content/{chapterId}/Comments {
      allow read: if true;
      allow write: if request.auth.uid != null;
    }
    match /CourseDetails/{courseId}/Content/{chapterId}/Likes {
      allow read: if true;
      allow write: if false;
    }
    match /CourseDetails/{courseId}/EnrolledUsers {
      allow read: if true;
      allow write: if false;
    }
    match /CourseDetails/{courseId}/Reviews { 
      allow read: if true;
      allow write: if false;
    }

    match /TutorApplications/{message} {
      allow read: if false;
      allow write: if false;
    }
    match /UsersPrivate/{uid} {
      allow read,create,update: if request.auth.uid == uid;
    }
    match /UsersPublic/{uid} {
      allow read: if true; 
      allow create,update: if request.auth.uid == uid;
    }

  }
}